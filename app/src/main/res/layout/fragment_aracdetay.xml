<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.aracdetayFragment">

    <ImageView
        android:id="@+id/carImage"
        android:layout_width="349dp"
        android:layout_height="241dp"
        android:layout_marginTop="92dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/markatextView"
        android:layout_width="312dp"
        android:layout_height="45dp"
        android:layout_marginStart="52dp"
        android:text="araç marka"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fiyattextView" />

    <TextView
        android:id="@+id/fiyattextView"
        android:layout_width="312dp"
        android:layout_height="60dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="92dp"
        android:text="araç fiyat"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carImage" />

    <TextView
        android:id="@+id/hptextView"
        android:layout_width="312dp"
        android:layout_height="56dp"
        android:layout_marginStart="52dp"
        android:text="araç beygir"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/motorGucutextView" />

    <TextView
        android:id="@+id/motorGucutextView"
        android:layout_width="302dp"
        android:layout_height="52dp"
        android:text="araç motor gücü"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/yakıttextView"
        app:layout_constraintTop_toBottomOf="@+id/yakıttextView" />

    <TextView
        android:id="@+id/modeltextView"
        android:layout_width="302dp"
        android:layout_height="54dp"
        android:text="araç model"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.457"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/markatextView" />

    <TextView
        android:id="@+id/yakıttextView"
        android:layout_width="297dp"
        android:layout_height="43dp"
        android:text="araç yakıt"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/modeltextView"
        app:layout_constraintTop_toBottomOf="@+id/modeltextView" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="278dp"
        android:layout_height="56dp"
        android:src="@drawable/car"
        app:layout_constraintBottom_toTopOf="@+id/carImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.333" />

    <Button
        android:id="@+id/sepeteEklebutton"
        android:layout_width="323dp"
        android:layout_height="61dp"
        android:text="Sepete Ekle"
        app:layout_constraintBottom_toTopOf="@+id/fiyattextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/carImage"
        app:layout_constraintVertical_bias="0.433" />

    <Button
        android:id="@+id/silbutton"
        android:layout_width="337dp"
        android:layout_height="53dp"
        android:layout_marginTop="24dp"
        android:text="İlanı Sil"
        app:layout_constraintEnd_toEndOf="@+id/sepeteEklebutton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sepeteEklebutton"
        app:layout_constraintTop_toBottomOf="@+id/hptextView" />
</androidx.constraintlayout.widget.ConstraintLayout>