<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adminFragment">

    <EditText
        android:id="@+id/KullaniciAdiText"
        android:layout_width="0dp"
        android:layout_height="94dp"
        android:layout_marginStart="63dp"
        android:layout_marginTop="296dp"
        android:layout_marginEnd="63dp"
        android:ems="10"
        android:hint="kullanıcı adı giriniz"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/AdminsifreText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="58dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="59dp"
        android:ems="10"
        android:hint="şifre giriniz"
        android:inputType="textPassword"
        app:layout_constraintBottom_toTopOf="@+id/adminGirisbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <Button
        android:id="@+id/adminGirisbutton"
        android:layout_width="195dp"
        android:layout_height="0dp"
        android:layout_marginStart="39dp"
        android:layout_marginBottom="235dp"
        android:text="giriş yap"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/AdminsifreText"
        app:layout_constraintTop_toBottomOf="@+id/AdminsifreText" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="31dp"
        android:layout_marginTop="92dp"
        android:layout_marginBottom="236dp"
        android:src="@drawable/car"
        app:layout_constraintBottom_toTopOf="@+id/AdminsifreText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>